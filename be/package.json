{
  "name": "lets-chat",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "NODE_ENV=development PORT=3003 nodemon --watch src -e ts,tsx --exec ts-node src/server.ts --trace-warnings",
    "build-ts": "tsc --extendedDiagnostics",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run build-ts",
    "postbuild": "cp package.json dist/package.json && cd dist && npm install --only=production",
    "start": "npm run watch-server",
    "test:integration:heroku": "newman run integrationtests/node-koa-typescript.postman_collection.json -e integrationtests/env/heroku-dev.postman_environment.json",
    "test:integration:local": "newman run integrationtests/node-koa-typescript.postman_collection.json -e integrationtests/env/local-dev.postman_environment.json",
    "test:load": "locust --no-web -c 50 -r 10 -f loadtests/locustfile.py --run-time 1m --host=https://node-typescript-koa-rest.herokuapp.com"
  },
  "engines": {
    "node": "16.x.x",
    "npm": "7.x.x"
  },
  "author": "Vladislav Aituganov",
  "license": "MIT",
  "devDependencies": {
    "@types/cron": "1.7.3",
    "@types/koa": "2.13.4",
    "@types/koa__router": "8.0.7",
    "@types/koa-bodyparser": "4.3.2",
    "@types/node": "12.12.6",
    "@types/shelljs": "0.8.9",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "nodemon": "2.0.12",
    "shelljs": "0.8.4",
    "ts-node": "8.8.2",
    "typescript": "4.5.3"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.15.0",
    "@koa/router": "8.0.8",
    "@metamask/eth-sig-util": "^4.0.0",
    "axios": "0.21.1",
    "bodybuilder": "2.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cron": "1.8.2",
    "crypto": "1.0.1",
    "dotenv": "8.2.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-jwt": "3.6.0",
    "libphonenumber-js": "1.9.44",
    "node-fetch": "2.6.1",
    "querystring": "^0.2.1",
    "random-avatar-generator": "^2.0.0",
    "reflect-metadata": "0.1.13",
    "vk-io": "4.3.2",
    "winston": "3.6.0",
    "winston-daily-rotate-file": "4.6.1"
  }
}
